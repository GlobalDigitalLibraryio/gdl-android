<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/book_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_gallery"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/book_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/placeholder_short_title"
                            android:textColor="@color/dark_text"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/book_publisher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/placeholder_publisher"
                            android:textColor="@color/dark_text"
                            android:textSize="14sp" />

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="13dp"
                            android:layout_marginTop="13dp"
                            android:background="@color/white"
                            card_view:cardCornerRadius="4dp"
                            card_view:cardElevation="2dp"
                            card_view:cardUseCompatPadding="true">

                            <ImageView
                                android:id="@+id/book_cover"
                                android:layout_width="150dp"
                                android:layout_height="185dp" />

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:id="@+id/book_download_failed_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <Button
                                android:id="@+id/book_download_retry"
                                android:layout_width="140dp"
                                android:layout_height="@dimen/button_standard_height"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/button_green"
                                android:elevation="1dp"
                                android:text="@string/catalog_book_error_retry"
                                android:textColor="@color/white"
                                android:textSize="@dimen/button_text_size"
                                android:translationZ="1dp" />

                            <Button
                                android:id="@+id/book_download_dismiss"
                                android:layout_width="140dp"
                                android:layout_height="@dimen/button_standard_height"
                                android:background="@drawable/button_green"
                                android:elevation="1dp"
                                android:text="@string/catalog_book_error_dismiss"
                                android:textColor="@color/white"
                                android:textSize="@dimen/button_text_size"
                                android:translationZ="1dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/book_read_and_delete_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <Button
                                android:id="@+id/book_read_book"
                                android:layout_width="140dp"
                                android:layout_height="@dimen/button_standard_height"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/button_green"
                                android:elevation="1dp"
                                android:text="@string/catalog_book_read"
                                android:textColor="@color/white"
                                android:textSize="@dimen/button_text_size"
                                android:translationZ="1dp" />

                            <ImageButton
                                android:id="@+id/book_delete_book"
                                android:layout_width="35dp"
                                android:layout_height="@dimen/button_standard_height"
                                android:background="@drawable/button_red"
                                android:contentDescription="@string/catalog_book_delete"
                                android:elevation="1dp"
                                android:src="@drawable/ic_delete_forever_white_24dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/button_text_size"
                                android:translationZ="1dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/book_downloading_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <RelativeLayout
                                android:layout_width="140dp"
                                android:layout_height="@dimen/button_standard_height"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/button_green_outline"
                                android:gravity="center"
                                android:elevation="1dp"
                                android:translationZ="1dp">
                                <ProgressBar
                                    android:indeterminateTint="#FF359258"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>

                            <ImageButton
                                android:id="@+id/book_download_cancel"
                                android:layout_width="35dp"
                                android:layout_height="@dimen/button_standard_height"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/button_red"
                                android:contentDescription="@string/catalog_cancel_downloading"
                                android:elevation="1dp"
                                android:src="@drawable/ic_close_white_24dp"
                                android:translationZ="1dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/book_download_button_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <Button
                                android:id="@+id/book_download_button"
                                android:layout_width="140dp"
                                android:layout_height="@dimen/button_standard_height"
                                android:background="@drawable/button_green_outline"
                                android:elevation="1dp"
                                android:text="@string/catalog_book_download"
                                android:textColor="#FF359258"
                                android:textSize="@dimen/button_text_size"
                                android:translationZ="1dp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:background="@color/white"
                android:orientation="vertical"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/book_description_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Description"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_text"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/book_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:text="@string/placeholder_description"
                        android:textColor="@color/dark_text"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/book_description_divider"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/gray_gallery" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/book_published_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="15dp"
                                android:text="@string/book_published"
                                android:textAllCaps="true"
                                android:textColor="@color/dark_text"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/book_published"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:layout_marginStart="15dp"
                                android:text="@string/placeholder_date"
                                android:textColor="@color/dark_text"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/book_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/level_background"
                            android:elevation="1dp"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="@string/book_level"
                            android:textColor="#FF359258"
                            android:translationZ="1dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/book_authors_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/book_authors"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_text"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/book_authors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:text="@string/placeholder_long_author"
                        android:textColor="@color/dark_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/book_license_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:text="@string/book_license"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_text"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/book_license"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:text="@string/placeholder_description"
                        android:textColor="@color/dark_text"
                        android:textSize="12sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>