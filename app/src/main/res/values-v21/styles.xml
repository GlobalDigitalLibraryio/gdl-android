<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="GdlTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/gdl_blue</item>
        <item name="colorPrimaryDark">@color/gdl_dark</item>
        <item name="colorAccent">@color/gdl_blue</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/gdl_links</item>
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Header" parent="GdlTheme">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Settings" parent="GdlTheme">
        <item name="colorPrimary">@color/gray_desert_storm</item>
        <item name="colorControlNormal">@color/dark_text</item>
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="android:actionMenuTextColor">@color/dark_text</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimaryDark">@color/gdl_dark</item>
    </style>

    <style name="NavigationDrawer" parent="GdlTheme">
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">@color/dark_text</item>
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="colorControlHighlight">@color/navigation_selected</item>
        <item name="listPreferredItemPaddingLeft">72dp</item>
        <item name="listPreferredItemPaddingRight">72dp</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="GdlTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
